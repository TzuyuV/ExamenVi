@model List<ExamenVic.Models.ViewModels.MateriasProfesor>

<br />
<h4>Bienvenido profesor</h4>
<br />

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Materias</th>
            <th scope="col"></th>
            <th scope="col"></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (ExamenVic.Models.ViewModels.MateriasProfesor item in Model)
                                {
        <tr>
            <td>@item.nombreMateria</td>
                <td><a class="btn btn-success btn-sm" href="@Url.Action("ListaEstudiantes","AreaDeTrabajo", new { nombreMateria=item.nombreMateria})">Ver estudiantes</a></td>
                <td><a class="btn btn-danger btn-sm" href="@Url.Action("ConteoAprobacion","AreaDeTrabajo", new { idUsuario=item.idUsuario, nombreMateria = item.nombreMateria})">Consultar aprovados/reprovados</a></td>
        </tr>
                                }
    </tbody>
</table>
<br />
<a class="btn btn-primary btn-lg btn-block" style="background-color: #bb0000" asp-area="" asp-controller="Home" asp-action="Index"
   role="button">
    <i class="fab fa-facebook-f me-2"></i>Salir
</a>